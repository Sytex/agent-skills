{
  "name": "gcalendar",
  "title": "Google Calendar",
  "description": "Manage Google Calendar events. Supports multiple accounts.",
  "version": "1.3.0",
  "setup_instructions": "Create OAuth credentials once, then authorize multiple Google accounts.",
  "fields": [
    {
      "name": "client_id",
      "label": "Client ID",
      "type": "text",
      "required": true,
      "env_var": "GCALENDAR_CLIENT_ID",
      "help": "OAuth 2.0 Client ID from Google Cloud Console",
      "help_url": "https://console.cloud.google.com/apis/credentials"
    },
    {
      "name": "client_secret",
      "label": "Client Secret",
      "type": "password",
      "required": true,
      "env_var": "GCALENDAR_CLIENT_SECRET",
      "help": "OAuth 2.0 Client Secret from Google Cloud Console"
    },
    {
      "name": "accounts",
      "label": "Google Accounts",
      "type": "list",
      "env_key": "ACCOUNT",
      "required": false,
      "item_fields": [
        {
          "name": "slug",
          "label": "Account Name",
          "type": "text",
          "required": true,
          "help": "Short name (e.g., 'work', 'personal')"
        }
      ],
      "item_oauth": {
        "auth_url": "https://accounts.google.com/o/oauth2/v2/auth",
        "token_url": "https://oauth2.googleapis.com/token",
        "scopes": ["https://www.googleapis.com/auth/calendar"],
        "extra_auth_params": {"access_type": "offline", "prompt": "consent"},
        "token_mapping": {
          "access_token": "ACCESS_TOKEN",
          "refresh_token": "REFRESH_TOKEN",
          "expires_in": "TOKEN_EXPIRES"
        }
      },
      "help": "Add Google accounts to authorize"
    }
  ],
  "test_command": "accounts",
  "files": ["gcalendar", "SKILL.md", "README.md"]
}
