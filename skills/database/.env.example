# Example configuration with multiple MySQL/MariaDB connections
#
# Format: DATABASE_DB_<NAME>_<FIELD>
# (skill name "database" becomes "DATABASE" in the installer)
#
# Note: You don't specify the database name in config - the agent will
# list available databases on the server and select which one to work with.
#
# Example 1: Production server
DATABASE_DB_PRODUCTION_HOST="127.0.0.1"
DATABASE_DB_PRODUCTION_PORT="3306"
DATABASE_DB_PRODUCTION_USER="readonly"
DATABASE_DB_PRODUCTION_PASSWORD="your_password_here"

# Example 2: Staging server
DATABASE_DB_STAGING_HOST="127.0.0.1"
DATABASE_DB_STAGING_PORT="3307"
DATABASE_DB_STAGING_USER="readonly"
DATABASE_DB_STAGING_PASSWORD="your_password_here"

# Example 3: Local server
DATABASE_DB_LOCAL_HOST="127.0.0.1"
DATABASE_DB_LOCAL_PORT="3306"
DATABASE_DB_LOCAL_USER="root"
DATABASE_DB_LOCAL_PASSWORD="local_password"

# Optional: Set default connection (if not set, first one is used)
DATABASE_DEFAULT_DB="production"
