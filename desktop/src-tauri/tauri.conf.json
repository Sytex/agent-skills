{
  "productName": "Agent Skills",
  "version": "0.1.0",
  "identifier": "com.sytex.agent-skills",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Agent Skills",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "resources": {
      "../../skills/": "skills/"
    },
    "macOS": {
      "minimumSystemVersion": "12.0"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/pablanka/agent-skills/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
